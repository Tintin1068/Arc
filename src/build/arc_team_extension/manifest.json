{
  "name": "ARC Team Extension",
  "version": "1.18",
  "background": {
    "scripts": ["background.js", "change_log_security_override.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "permissions": [
      "notifications",
      "webRequest",
      "webRequestBlocking",
      "http://chromegw.corp.google.com/",
      "http://arc-tree-status.appspot.com/",
      "https://chrome-internal.googlesource.com/arc/arc/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chrome-internal-review.googlesource.com/*"],
      "js": ["show_review_counts.js"]
    },
    {
      "matches": ["https://arc-omahaproxy.appspot.com/viewer",
                  "https://arc-omahaproxy.googleplex.com/viewer"],
      "all_frames": true,
      "runs_at": "document_end",
      "js": ["show_log_and_crash_links.js"]
    }
  ]
}
